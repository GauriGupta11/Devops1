pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('List Files') {
            steps {
                dir('Devops1/3') {
                    // List the files in the directory
                    sh 'echo "Current directory:" && pwd'
                    sh 'dir'  // List files to confirm that app.py is in this directory
                }
            }
        }

        stage('Run Python App') {
            steps {
                dir('Devops1/3') {
                    // Use full path to Python and app.py file
                    sh 'C:/Users/gauri/AppData/Local/Programs/Python/Python312/python.exe app.py'
                }
            }
        }
    }

    post {
        success {
            echo 'Merge conflict resolved and app.py ran successfully!'
        }
        failure {
            echo 'There was an error running the Python script.'
        }
    }
}
