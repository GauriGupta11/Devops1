pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('List Files') {
            steps {
                dir('Devops1/3') {
                    // List the files in the directory and print the current working directory
                    sh 'echo "Current directory:" && pwd'
                    sh 'dir'  // List files to confirm that app.py is in this directory
                }
            }
        }

        stage('Run Python App') {
            steps {
                // Print the working directory again before running the script
                echo "Current directory before running app.py"
                sh 'pwd'
                dir('Devops1/3') {
                    // Run Python app using the correct Python executable from Jenkins workspace
                    sh 'python app.py'
                }
            }
        }
    }

    post {
        success {
            echo 'Merge conflict resolved and app.py ran successfully!'
        }
        failure {
            echo 'There was an error running the Python script.'
        }
    }
}
