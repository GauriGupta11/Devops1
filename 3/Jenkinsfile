pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('List Files') {
            steps {
                dir('Devops1/3') {
                    sh 'dir'  // Lists the files in the directory to verify the path
                }
            }
        }

        stage('Run Python App') {
            steps {
                dir('Devops1/3') {
                    sh 'python app.py'  // Runs the Python script
                }
            }
        }
    }

    post {
        success {
            echo 'Merge conflict resolved and app.py ran successfully!'
        }
        failure {
            echo 'There was an error running the Python script.'
        }
    }
}
